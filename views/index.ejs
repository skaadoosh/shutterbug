<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous">
        <link rel="stylesheet"
            href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
            integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm"
            crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="app.css">
        <title>ProductAccelarator Website</title>
    </head>

    <body>
        <header>
            <nav class="navbar shadow navbar-expand-lg navbar-dark">
                <div class="container-fluid mx-2">
                    <a class="navbar-brand" href="/"><span><i
                                class="fas fa-camera-retro"></i></span> ShutterBug</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/submit">Submit a photo</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/contact">Contact Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/about">About Us</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main>
            <section class="py-5 container">
                <div class="row py-lg-4">
                    <div id="form"
                        class="col-lg-6 col-md-8 col-10 mx-auto py-3 rounded-3 shadow">
                        <h1 class="fw-light text-center mt-2">Join the community</h1>
                        <div class="py-3 px-md-4">
                            <form action="/" method="POST">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="name"
                                        aria-describedby="name" name="user[name]">
                                </div>
                                <div class="mb-3">
                                    <label for="mail" class="form-label">Email
                                        address</label>
                                    <input type="email" class="form-control" id="mail"
                                        aria-describedby="email" name="user[mail]"
                                        placeholder="We will use this address to send confirmation email">
                                </div>
                                <div class="mb-3">
                                    <label for="password"
                                        class="form-label">Password</label>
                                    <input type="password" class="form-control"
                                        id="password" name="user[password]">
                                </div>
                                <div class="d-grid col-12 col-md-3 mx-auto">
                                    <button onclick="alert('Mail sent to given ID')"
                                        class="btn btn-secondary ">Submit
                                    </button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </section>
            <div class="album py-5 bg-light">
                <div class="container">

                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                        <% for(let img of images) {%>
                        <div class="col">
                            <div class="card shadow">
                                <img class="card-img" src=<%= img %> alt="random images">
                                <p class="card-footer m-0 text-muted">2 days ago</p>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </main>

        <footer class="text-white py-1 text">
            <div class="container">
                <p class="mt-3"> &copy; ShutterBug 2021</p>
            </div>
        </footer>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    </body>

</html>